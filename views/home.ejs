<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Nightlife </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
  </head>
  <body>
    <div class="container">
      <!-- <input type="text" class="" name="location" placeholder="Where you at?"> -->
      <!-- <button type="submit" class="btn btn-success" onclick="search();">Submit</button> -->
      <div class="row">


        <div class="col-xs-12 col-md-8">
          <input type="text" class="" name="location" placeholder="Where you at?">
          <button type="submit" class="btn btn-success" onclick="search();">Submit</button>
        </div>

        <div class="col-xs-6 col-md-4">
          <div class="jumbotron text-center">
            <!-- <h1><span class="fa fa-sign-in"></span> Login</h1> -->

            <% if (message != null) { %>
            	<div class="alert-danger"><%= message %></div>
            <% } %>

            <form action="/users/login" method="post">
              <div class="form-group">
                  <!-- <label>Email</label> -->
                  <input type="text" class="form-control" name="email" placeholder="Password">
              </div>
              <div class="form-group">
                <!-- <label>Password</label> -->
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <div>
                <input id="loginButton" type="submit" class="form-control" value="Submit" />
              </div>
            </form>
            <span class="fa fa-sign-in"> Don't have an account?<a href="/users/signup"> Signup</a></span>
          </div>

        </div>
      </div>

      <div class="row" id="content">


        <% for(var i=0;i<dt.businesses.length;++i){ %>
          <div class="">
            <form class="" action="" method="post">
              <div class="row">
                <div class="col-md-1">
                  <img src="<%= dt.businesses[i].image_url %>" alt="" />
                </div>

                <div class="col-md-11">
                  <a href="<%= dt.businesses[i].url %>">
                    <%= dt.businesses[i].name %>
                  </a>
                  <br>
                  <span> <%= dt.businesses[i].snippet_text %> </span>
                </div>
              </div>


            </form>
          </div>
          <br>
        <%}%>
      </div>

    </div>

  </body>

</html>
